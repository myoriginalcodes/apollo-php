{
    "name": "myoriginalcodes/apollo-php",
    "description": "A small library created to validate php-cli projects",
    "keywords": ["apollo-php", "php-cli", "validator"],
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "MyOriginalCodes\\ApolloPhp\\": "src/",
            "Tests\\": "tests/"
        }
    },
    "authors": [
        {
            "name": "Edson Nascimento",
            "email": "codes@myoriginalcod.es"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "php": "^8.1"
    },
    "scripts": {
        "test": [
            "./vendor/bin/phpunit --testdox"
        ],
        "phpstan": [
            "./vendor/bin/phpstan analyse --level=9 src tests"
        ]
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "phpstan/phpstan": "^1.10"
    }
}
